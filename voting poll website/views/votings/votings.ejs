<!DOCTYPE html>
<html>
<head>
	<title>votings</title>
</head>

			<meta name="viewport" content="width=device-width, initial-scale=1">
			<title>Vote Bazzar</title>
	
  		 	 <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.1/css/all.css">

			<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
			<!--since the __dirname is used in app.js file there is no need to write full path of main css file 	 -->
			<link rel="stylesheet" type="text/css" href="/stylesheet/voting.css">


<body>
 <%- include("../partials/header") %>


    
		<div class="container">
	<!-- this id is used to give colors which is written in main.css -->
	<header id="jumbo" class="jumbotron">
		<div class="container">
			<h1><i class="fas fa-hand-point-up"></i> Welcome to votting bazzar</h1>
			<p>Online election from all over india</p>
			<p>
				<a class="btn btn-primary btn-large" href = "voting/new">Add new votting</a>
				 <p>
				<form action="/voting" method="get" class="form-inline">
					<div class="form-group">
						<input type="text" name="search" placeholder="vote search......" class="form-control">
						<input type="submit" value="search" class="btn btn-default">
					</div>
				</form>
			
			</p>
			</p>
		</div>
	</header>


<!-- this style will help to resize all images as same size -->
<div class="row text-center" style="display:flex; flex-wrap: wrap;" > 
		<div class="col-md-12">
			<% if(nomatch !== undefined){ %>
				<h3> <%=	nomatch %>	</h3>
			<% } %>		
		</div>
	 <% votings.forEach(function(voting){ %>

        <div class="col-md-3 col-sm-6">
        			<!-- this id is used to give colors which is written in main.css -->
            <div id="thumb" class="thumbnail" >

                <img style="height: 11em" src="<%= voting.image %>">

               		 <div class="caption">

                    	<h4><%= voting.name %></h4>

               		 </div>

              		  <p>

                   		 <a href="/voting/<%= voting._id %>" class="btn btn-primary">Click here to vote</a>

               		 </p>

            </div>

        </div>

        <% }); %>
	</div> 

<!-- pagging logic -->


<div class="row text-center">
    <% if (pages && pages > 0) { %>
    <ul class="pagination text-center">
        <% if (current == 1) { %>
        <li class="disabled"><a>First</a></li>
        <% } else { %>
        <li><a href="/campgrounds">First</a></li>
        <% } %>
 
        <% if (current == 1) { %>
        <li class="disabled"><a>«</a></li>
        <% } else { %>
        <li><a href="/campgrounds?page=<%= Number(current) - 1 %>">«</a></li>
        <% } %>
 
        <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
        <% if (i !== 1) { %>
        <li class="disabled"><a>...</a></li>
        <% } %>
        <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
        <% if (i == current) { %>
        <li class="active"><a><%= i %></a></li>
        <% } else { %>
        <li><a href="/campgrounds?page=<%= i %>"><%= i %></a></li>
        <% } %>
        <% if (i == Number(current) + 4 && i < pages) { %>
        <li class="disabled"><a>...</a></li>
        <% } %>
        <% } %>
 
        <% if (current == pages) { %>
        <li class="disabled"><a>»</a></li>
        <% } else { %>
        <li><a href="/campgrounds?page=<%= Number(current) + 1 %>">»</a></li>
        <% } %>
 
        <% if (current == pages) { %>
        <li class="disabled"><a>Last</a></li>
        <% } else { %>
        <li><a href="/campgrounds?page=<%= pages %>">Last</a></li>
        <% } %>
    </ul>
    <% } %>
</div>


</div>


 <script
            src="https://code.jquery.com/jquery-3.3.1.min.js"
            integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
            crossorigin="anonymous"></script>



    <script src="https://stackpath.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"
            integrity="sha384-vhJnz1OVIdLktyixHY4Uk3OHEwdQqPppqYR8+5mjsauETgLOcEynD9oPHhhz18Nw"
            crossorigin="anonymous"></script>

</body>
</html>
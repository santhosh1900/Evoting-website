<%- include("./partials/header") %>







<div class="row">
    <h1 style="text-align: center">Email verification</h1>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/emailVerify" method="POST">
            <div class="form-group">
                <input class="form-control" type="email" name="email" placeholder="Enter your mail id to verify">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-success btn-block">Click to verify</button>
            </div>
        </form>      
        <a style="margin-top: 15px" class="btn btn-sm btn-primary" href="/login">Go Back</a>
    </div>
</div>












